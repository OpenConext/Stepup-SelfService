{
    "name": "surfnet/stepup-selfservice",
    "license": "Apache-2.0",
    "description": "The SURFnet Step-up Self-Service allows Gateway users to create Identities and Tokens.",
    "autoload": {
        "psr-4": {
            "Surfnet\\": "src\\Surfnet"
        },
        "classmap": [
            "src/Kernel.php"
        ]
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/OpenConext/Stepup-Middleware-clientbundle"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "ext-gd": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7",
        "incenteev/composer-parameter-handler": "~2.0",
        "jms/translation-bundle": "^2.0.0",
        "mpdf/mpdf": "^8.2",
        "nelmio/security-bundle": "^2",
        "openconext/monitor-bundle": "^3.1",
        "sensio/framework-extra-bundle": "^6.0",
        "surfnet/stepup-bundle": "^6.0",
        "surfnet/stepup-middleware-client-bundle": "dev-feature/sf6-support",
        "symfony/console": "4.4.* || 6.3.*",
        "symfony/expression-language": "4.4.* || 6.3.*",
        "symfony/flex": "^1.8",
        "symfony/form": "4.4.* || 6.3.*",
        "symfony/http-foundation": "^6.0",
        "symfony/monolog-bundle": "^3.1.0",
        "symfony/security-bundle": "4.4.* || 6.3.*",
        "symfony/stopwatch": "4.4.* || 6.3.*",
        "symfony/translation": "4.4.* || 6.3.*",
        "symfony/twig-bundle": "4.4.* || 6.3.*",
        "symfony/web-profiler-bundle": "4.4.* || 6.3.*",
        "symfony/webpack-encore-bundle": "^1.8",
        "twig/extensions": "^1.5",
        "twig/extra-bundle": "^2.12|^3.0",
        "twig/twig": "^2"
    },
    "require-dev": {
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "malukenho/docheader": "^1.0.0",
        "matthiasnoback/symfony-config-test": "^4",
        "mockery/mockery": "~1.0",
        "phpmd/phpmd": "^2.6",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^0.18.5",
        "roave/security-advisories": "dev-latest",
        "sebastian/exporter": "^4.0.5",
        "sebastian/phpcpd": "^6.0",
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/browser-kit": "4.4.* || 6.3.*",
        "symfony/css-selector": "4.4.* || 6.3.*",
        "symfony/phpunit-bridge": "^6.3"
    },
    "scripts": {
        "test": [
            "@lint",
            "@phpmd",
            "@phpcs",
            "@phpcpd",
            "@license-headers",
            "@phpunit",
            "@security-tests",
            "@yarn-audit"
        ],
        "lint": [
            "@lint-php",
            "@lint-composer"
        ],
        "lint-php": "vendor/bin/parallel-lint src",
        "lint-composer": "composer validate",
        "license-headers": "vendor/bin/docheader check src/",
        "phpmd": "vendor/bin/phpmd ./src text phpmd.xml --suffixes php --exclude */Tests/*",
        "phpcs": [
            "vendor/bin/phpcs --standard=phpcs.xml --report=full --warning-severity=0 ./src"
        ],
        "phpcpd": [
            "vendor/bin/phpcpd  ./src"
        ],
        "phpunit": "vendor/bin/phpunit --configuration=phpunit.xml.dist --coverage-text",
        "security-tests": "composer audit",
        "yarn-audit": "yarn audit",
        "frontend-install": [
            "yarn install --frozen-lockfile",
            "yarn encore production"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "@auto-scripts"
        ]
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "archive": {
        "exclude": [
            "*",
            ".*",
            "*/Tests/*",
            "!/bin",
            "!/component_info",
            "!/config",
            "!/public",
            "!/src",
            "!/templates",
            "!/translations",
            "!/var/cache/prod",
            "!/vendor"
        ]
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.4.* || 6.3.*"
        },
        "symfony-app-dir": "app",
        "symfony-var-dir": "app",
        "symfony-bin-dir": "app",
        "symfony-web-dir": "web",
        "symfony-assets-install": "symlink",
        "incenteev-parameters": [
            {
                "file": "config/legacy/parameters.yaml"
            },
            {
                "file": "config/legacy/samlstepupproviders_parameters.yaml"
            },
            {
                "file": "config/legacy/global_view_parameters.yaml"
            }
        ]
    }
}
