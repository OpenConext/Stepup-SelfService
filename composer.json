{
  "name": "surfnet/stepup-selfservice",
  "license": "Apache-2.0",
  "description": "The SURFnet Step-up Self-Service allows Gateway users to create Identities and Tokens.",
  "autoload": {
    "psr-4": {
      "Surfnet\\": "src\\Surfnet"
    },
    "classmap": [
      "app/AppKernel.php",
      "app/AppCache.php"
    ]
  },
  "minimum-stability": "stable",
  "require": {
    "php": "~7.2",
    "fortawesome/font-awesome": "~4.2.0",
    "guzzlehttp/guzzle": "^6",
    "incenteev/composer-parameter-handler": "~2.0",
    "jms/translation-bundle": "~1.3.0",
    "malukenho/docheader": "^0.1.8",
    "mpdf/mpdf": "^7.0",
    "nelmio/security-bundle": "~1.4",
    "openconext/monitor-bundle": "^1.0",
    "sensio/distribution-bundle": "^5.0",
    "sensio/framework-extra-bundle": "~3.0",
    "surfnet/stepup-bundle": "~4.0",
    "surfnet/stepup-middleware-client-bundle": "^3.0",
    "surfnet/stepup-saml-bundle": "^4.1",
    "surfnet/stepup-u2f-bundle": "3.4.0",
    "symfony/assetic-bundle": "~2.3",
    "symfony/form": "^3.4",
    "symfony/monolog-bundle": "^3.1.0",
    "symfony/symfony": "3.4.*",
    "symfony/webpack-encore-bundle": "^1.8",
    "twbs/bootstrap": "^3.3.0",
    "twig/extensions": "^1.5",
    "twig/twig": "1.41.0"
  },
  "require-dev": {
    "jakub-onderka/php-parallel-lint": "^1.0",
    "matthiasnoback/symfony-config-test": "^2.2",
    "mockery/mockery": "~1.0",
    "phpmd/phpmd": "^2.6",
    "phpunit/phpunit": "^5.7",
    "roave/security-advisories": "dev-master",
    "sebastian/exporter": "~2.0",
    "sebastian/phpcpd": "^2.0",
    "squizlabs/php_codesniffer": "^3.4",
    "symfony/phpunit-bridge": "^3.0"
  },
  "scripts": {
    "test": [
      "@lint",
      "@phpmd",
      "@phpcs",
      "@phpcpd",
      "@license-headers",
      "@phpunit",
      "@behat",
      "@security-tests",
      "@yarn-audit"
    ],
    "lint": [
      "@lint-php",
      "@lint-composer"
    ],
    "lint-php": "vendor/bin/parallel-lint src",
    "lint-composer": "composer validate",
    "license-headers": "vendor/bin/docheader check src/",
    "phpmd": "vendor/bin/phpmd ./src text phpmd.xml --suffixes php --exclude */Tests/*",
    "phpcs": [
      "vendor/bin/phpcs --standard=phpcs.xml --report=full --warning-severity=0 ./src"
    ],
    "phpcpd": [
      "vendor/bin/phpcpd  ./src"
    ],
    "phpunit": "vendor/bin/phpunit --configuration=phpunit.xml.dist --coverage-text",
    "security-tests": "vendor/bin/security-checker security:check",
    "yarn-audit": "yarn audit",
    "frontend-install": [
      "yarn install --frozen-lockfile",
      "yarn encore production"
    ],
    "post-install-cmd": [
      "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::removeSymfonyStandardFiles"
    ],
    "post-update-cmd": [
      "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::removeSymfonyStandardFiles"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "7.2"
    }
  },
  "extra": {
    "symfony-app-dir": "app",
    "symfony-var-dir": "app",
    "symfony-bin-dir": "app",
    "symfony-web-dir": "web",
    "symfony-assets-install": "symlink",
    "incenteev-parameters": [
      {
        "file": "app/config/parameters.yml"
      },
      {
        "file": "app/config/samlstepupproviders_parameters.yml"
      },
      {
        "file": "app/config/global_view_parameters.yml"
      }
    ]
  }
}
