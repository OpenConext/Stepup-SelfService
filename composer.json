{
    "name": "surfnet/stepup-selfservice",
    "license": "Apache-2.0",
    "description": "The SURFnet Step-up Self-Service allows Gateway users to create Identities and Tokens.",
    "autoload": {
        "psr-4": {
            "Surfnet\\": "src\\Surfnet"
        },
        "classmap": [
            "src/Kernel.php"
        ]
    },
    "minimum-stability": "stable",
    "require": {
        "php": "~7.2",
        "guzzlehttp/guzzle": "^6",
        "incenteev/composer-parameter-handler": "~2.0",
        "jms/translation-bundle": "^1.3.0",
        "mpdf/mpdf": "^7.0",
        "nelmio/security-bundle": "^2",
        "openconext/monitor-bundle": "^2.0",
        "sensio/framework-extra-bundle": "^5.0",
        "surfnet/stepup-bundle": "^4.0",
        "surfnet/stepup-middleware-client-bundle": "^4.0",
        "surfnet/stepup-saml-bundle": "^4.1",
        "symfony/console": "^4.4",
        "symfony/flex": "^1.8",
        "symfony/monolog-bundle": "^3.1.0",
        "symfony/symfony": "^4.4",
        "symfony/webpack-encore-bundle": "^1.8",
        "twig/extensions": "^1.5",
        "twig/extra-bundle": "^2.12|^3.0",
        "twig/twig": "^2"
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^1.0",
        "malukenho/docheader": "^0.1.8",
        "matthiasnoback/symfony-config-test": "^4",
        "mockery/mockery": "~1.0",
        "phpmd/phpmd": "^2.6",
        "phpunit/phpunit": "^8",
        "sebastian/exporter": "^3",
        "sebastian/phpcpd": "^4",
        "sensiolabs/security-checker": "^6.0",
        "squizlabs/php_codesniffer": "^3.4",
        "symfony/phpunit-bridge": "^3.0"
    },
    "scripts": {
        "test": [
            "@lint",
            "@phpmd",
            "@phpcs",
            "@phpcpd",
            "@license-headers",
            "@phpunit",
            "@behat",
            "@security-tests",
            "@yarn-audit"
        ],
        "lint": [
            "@lint-php",
            "@lint-composer"
        ],
        "lint-php": "vendor/bin/parallel-lint src",
        "lint-composer": "composer validate",
        "license-headers": "vendor/bin/docheader check src/",
        "phpmd": "vendor/bin/phpmd ./src text phpmd.xml --suffixes php --exclude */Tests/*",
        "phpcs": [
            "vendor/bin/phpcs --standard=phpcs.xml --report=full --warning-severity=0 ./src"
        ],
        "phpcpd": [
            "vendor/bin/phpcpd  ./src"
        ],
        "phpunit": "vendor/bin/phpunit --configuration=phpunit.xml.dist --coverage-text",
        "security-tests": "vendor/bin/security-checker security:check",
        "yarn-audit": "yarn audit",
        "frontend-install": [
            "yarn install --frozen-lockfile",
            "yarn encore production"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "security-checker security:check": "script"
        },
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "@auto-scripts"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "7.2"
        }
    },
    "archive": {
        "exclude": [
            "*",
            ".*",
            "*/Tests/*",
            "!/bin",
            "!/config",
            "!/public",
            "!/src",
            "!/templates",
            "!/translations",
            "!/var/cache/prod",
            "!/vendor"
        ]
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "^4.4"
        },
        "symfony-app-dir": "app",
        "symfony-var-dir": "app",
        "symfony-bin-dir": "app",
        "symfony-web-dir": "web",
        "symfony-assets-install": "symlink",
        "incenteev-parameters": [
            {
                "file": "config/legacy/parameters.yml"
            },
            {
                "file": "config/legacy/samlstepupproviders_parameters.yml"
            },
            {
                "file": "config/legacy/global_view_parameters.yml"
            }
        ]
    }
}
