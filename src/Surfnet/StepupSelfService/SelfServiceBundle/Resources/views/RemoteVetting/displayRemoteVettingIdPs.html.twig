{% extends "::base.html.twig" %}

{% block page_title %}{{ 'ss.registration.remote_vetting_idp.title'|trans }}{% endblock %}

{% block page_header %}
    {{ parent() }}

    {% if verifyEmail %}
        {% include 'SurfnetStepupSelfServiceSelfServiceBundle:Registration/partial:progressBar.html.twig' with {'progress':75, 'step': 4, verifyEmail: true} only %}
    {% else %}
        {% include 'SurfnetStepupSelfServiceSelfServiceBundle:Registration/partial:progressBar.html.twig' with {'progress': 65, 'step': 3, verifyEmail: false} only %}
    {% endif %}
{% endblock %}

{% block content %}
    <h2>{{ block('page_title') }}</h2>

    <div class="row second-factors">

        <div class="col-xs-12 col-md-4">
            <div class="thumbnail second-factor-selector">
                <img src="data:image/svg+xml;base64," alt="">
                <h3>iDIN</h3>
                <p>
                    iDIN is a service offered by banks which allows consumers to use their bank’s secure and reliable login methods to carry out the following actions on the websites of other organisations:
                </p>
                <form action="{{ url('ss_second_factor_remote_vet', {'secondFactorId': secondFactorId}) }}" method="get">
                <button type="submit" class="btn btn-primary">Continue</button>
                </form>
            </div>
        </div>

        <div class="col-xs-12 col-md-4">
            <div class="thumbnail second-factor-selector">
                <img src="data:image/svg+xml;base64,">
                <h3>ReadID</h3>
                <p>
                    ReadID® verifies identity documents with NFC on a smartphone
                </p>
                <form action="{{ url('ss_second_factor_remote_vet', {'secondFactorId': secondFactorId}) }}" method="get">
                <button type="submit" class="btn btn-primary">Continue</button>
                </form>
            </div>
        </div>

        <div class="col-xs-12 col-md-4">
            <div class="thumbnail second-factor-selector">
                <img src="data:image/svg+xml;base64,">
                <h3>IRMA</h3>
                <p>
                    IRMA is a unique privacy-friendly identity platform for both authentication and signing.
                </p>
                <form action="{{ url('ss_second_factor_remote_vet', {'secondFactorId': secondFactorId}) }}" method="get">
                <button type="submit" class="btn btn-primary">Continue</button>
                </form>
            </div>
        </div>

    </div>
    <form action="{{ url('ss_second_factor_remote_vetting_types', {'secondFactorId': secondFactorId}) }}" method="get">
        <button class="btn btn-danger">Back</button>
    </form>
{% endblock %}
