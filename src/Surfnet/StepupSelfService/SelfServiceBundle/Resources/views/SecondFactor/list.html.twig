{% extends "::base.html.twig" %}

{% block content %}
    <h1>{{ 'surfnet_stepup_self_service.second_factor.list.title'|trans }}</h1>

    <table class="table-striped">
        <thead>
            <tr>
                <th>{{ 'ss.second_factor_list.header.type'|trans }}</th>
                <th>{{ 'ss.second_factor_list.header.second_factor_identifier'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for secondFactor in secondFactors %}
                <tr>
                    <td>{{ 'ss.second_factor.type.'~secondFactor.type|trans }}</td>
                    <td>{{ secondFactor.secondFactorIdentifier }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
