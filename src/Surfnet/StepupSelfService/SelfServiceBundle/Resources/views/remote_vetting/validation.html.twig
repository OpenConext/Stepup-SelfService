{% extends "base.html.twig" %}
{% import _self as macro %}

{% block page_title %}{{ 'ss.second_factor.remote_vet_validation.title'|trans }}{% endblock %}

{% block content %}
    <h2>{{ block('page_title') }}</h2>

    <p>{{ 'ss.second_factor.remote_vet.text.does_it_match'|trans }}</p>

    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="row">
        <div class="col-xs-3">
            {{ 'ss.second_factor.remote_vet.attributes'|trans }}
        </div>
        <div class="col-xs-9">
            {{ form_widget(form.matches) }}
        </div>
    </div>

    <div class="row">
        <div class="col-xs-3">
            {{ 'ss.second_factor.remote_vet.is_identity_valid'|trans }}
        </div>
        <div class="col-xs-9">
            {{ form_widget(form.valid) }}
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            {{ form_widget(form.feedback) }}
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}
